<h1>Categories</h1>

<div class="row mb-4">
  <% @categories.each do |category| %>
    <div style="border-color: <%= category.color %>" class="card col-md-4">
      <div class="card-body">
        <h2 style="color: <%= category.color %>"><%= category.title %></h2>
        <p><%= link_to 'Zobrazit detail', settings_category_path(category), class: "btn btn-primary" %></p>
        <p><%= link_to 'Upravit', edit_settings_category_path(category), class: "btn btn-info" %></p>
        <p><%= link_to 'Smazat', settings_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
      </div>
    </div>
  <% end %>
</div>
<br>
<div class="card">
  <%= link_to 'New Category', new_settings_category_path, class: "btn btn-success" %>
</div>

