<h1>Tags</h1>

<div class="row">
  <% @tags.each do |tag| %>
    <div style="border-color: <%= tag.color %>" class="card col-md-4">
      <div class="card-body">
        <h2 style="color: <%= tag.color %>"><%= tag.title %></h2>
        <p><%= link_to 'Zobrazit detail', settings_tag_path(tag), class: "btn btn-primary" %></p>
        <p><%= link_to 'Upravit', edit_settings_tag_path(tag), class: "btn btn-info" %></p>
        <p><%= link_to 'Smazat', settings_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
      </div>
    </div>
  <% end %>
</div>
<br>
<div class="card">
  <%= link_to 'New Tag', new_settings_tag_path, class: "btn btn-success" %>
</div>

