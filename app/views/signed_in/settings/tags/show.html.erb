<div class="card">
  <div class="card-header">
    <h2 style="color: <%= @tag.color %>"><%= @tag.title %></h2>
  </div>
  <div class="card-body">
    <% unless notice.blank? %>
      <p id="notice"><%= notice %></p>
    <% end %>
    <h3>Associated tasks</h3>
    <ul>
      <% @tag.tasks.each do |task| %>
        <li>
          <span style="color: <%= task.color %>"><%= task.title %></span> - <%= link_to "Show", task_path(task) %>
        </li>
      <% end %>
    </ul>

  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_settings_tag_path(@tag), class: "btn btn-primary" %>
    <%= link_to 'Back', settings_tags_path, class: "btn btn-info" %>
  </div>
</div>


