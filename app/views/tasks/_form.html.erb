<%= simple_form_for(@task) do |f| %>
  <div class="card-body">

    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :color %>
      <%= f.input :deadline_at %>
      <%= f.input :note %>
      <%= f.input :is_done %>
      <%= f.association :user, include_blank: false, label_method: lambda { |user| "#{user.email}" } %>
      <%= f.association :category, include_blank: false, label_method: lambda { |category| "#{category.title}" } %>
      <%= f.association :tags, as: :radio_buttons, include_blank: false, label_method: lambda { |tag| "#{tag.title}" } %>
    </div>
  </div>
  <div class="card-footer">
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


