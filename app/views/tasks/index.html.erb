<div class="alert alert-info"><%= notice %></div>

<h1>Tasks</h1>
<% @tasks.each do |task| %>
  <div class="well">
    <p><%= task.title %></p>
    <p><%= task.color %></p>
    <p><%= task.deadline_at %></p>
    <p><%= task.note %></p>
    <p><%= task.is_done %></p>
    <p><%= task.user %></p>
    <p><%= task.category %></p>
    <p><%= link_to 'Show', task %></p>
    <p><%= link_to 'Edit', edit_task_path(task) %></p>
    <p><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>

<br>

<%= link_to 'New Task', new_task_path %>
